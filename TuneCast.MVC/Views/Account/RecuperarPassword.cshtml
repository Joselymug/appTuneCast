@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <i class="fas fa-key"></i>
            <h3>Recuperar Contraseña</h3>
        </div>
        <div class="auth-body">
            <div class="form-text" style="text-align: center; margin-bottom: 25px; color: #6c757d;">
                <i class="fas fa-info-circle"></i>
                Ingrese su correo y palabra clave de recuperación para restablecer su contraseña.
            </div>

            <form asp-action="RecuperarPassword" method="post" novalidate>
                <div class="form-group">
                    <label class="form-label" for="email-recovery">
                        <i class="fas fa-envelope"></i> Correo Electrónico
                    </label>
                    <input id="email-recovery"
                           name="email"
                           type="email"
                           class="form-control"
                           required
                           value="@ViewData["Email"]"
                           placeholder="ejemplo@correo.com"
                           autocomplete="email"
                           aria-describedby="email-recovery-help" />
                    <small id="email-recovery-help" class="sr-only">Ingrese el correo asociado a su cuenta</small>
                </div>

                <div class="form-group">
                    <label class="form-label" for="recovery-word">
                        <i class="fas fa-shield-alt"></i> Palabra Clave de Recuperación
                    </label>
                    <input id="recovery-word"
                           name="palabraClave"
                           type="text"
                           class="form-control"
                           required
                           value="@ViewData["PalabraClave"]"
                           placeholder="Ingrese su palabra clave de recuperación"
                           aria-describedby="recovery-word-help" />
                    <small id="recovery-word-help" class="form-text">
                        <i class="fas fa-lightbulb"></i> Esta es la palabra clave que proporcionó durante el registro.
                    </small>
                </div>

                <div class="form-group">
                    <label class="form-label" for="new-password">
                        <i class="fas fa-lock"></i> Nueva Contraseña
                    </label>
                    <input id="new-password"
                           name="newPassword"
                           type="password"
                           class="form-control"
                           required
                           placeholder="Cree una nueva contraseña"
                           pattern="^(?=.*[A-Z])(?=.*[\W]).{8,}$"
                           autocomplete="new-password"
                           aria-describedby="new-password-help" />

                </div>

                <button type="submit" class="auth-btn">
                    <i class="fas fa-sync-alt"></i> Restablecer Contraseña
                </button>

                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> @ViewData["ErrorMessage"]
                    </div>
                }
            </form>

            <div class="auth-links">
                <p>
                    ¿Recordaste tu contraseña?
                    <a href="@Url.Action("Login", "Account")" class="auth-link">
                        Volver al inicio de sesión
                    </a>
                </p>

                <p>
                    ¿No tienes cuenta?
                    <a href="@Url.Action("Register", "Account")" class="auth-link">
                        Regístrate aquí
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>