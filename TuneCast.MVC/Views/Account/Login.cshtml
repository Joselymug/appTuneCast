@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <i class="fas fa-sign-in-alt"></i>
            <h3>Iniciar Sesión</h3>
        </div>
        <div class="auth-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Login" method="post" novalidate>
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="form-group">
                    <label class="form-label" for="email">
                        <i class="fas fa-envelope"></i> Correo Electrónico
                    </label>
                    <input id="email"
                           name="email"
                           type="email"
                           class="form-control"
                           required
                           placeholder="ejemplo@correo.com"
                           autocomplete="email"
                           aria-describedby="email-help" />
                    <small id="email-help" class="sr-only">Ingrese su dirección de correo electrónico</small>
                </div>

                <div class="form-group">
                    <label class="form-label" for="password">
                        <i class="fas fa-lock"></i> Contraseña
                    </label>
                    <input id="password"
                           name="contraseña"
                           type="password"
                           class="form-control"
                           required
                           placeholder="Ingrese su contraseña"
                           autocomplete="current-password"
                           aria-describedby="password-help" />
                    <small id="password-help" class="sr-only">Ingrese su contraseña</small>
                </div>

                <div class="form-check">
                    <input id="remember"
                           name="rememberMe"
                           type="checkbox"
                           class="form-check-input" />
                    <label class="form-check-label" for="remember">
                        Recordarme en este dispositivo
                    </label>
                </div>

                <button type="submit" class="auth-btn">
                    <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                </button>
            </form>

            <div class="auth-links">
                <p>
                    ¿No tienes cuenta?
                    <a href="@Url.Action("Register", "Account")" class="auth-link">
                        Regístrate aquí
                    </a>
                </p>

                <p>
                    <a href="@Url.Action("RecuperarPassword", "Account")" class="auth-link">
                        <i class="fas fa-key"></i> ¿Olvidaste tu contraseña?
                    </a>
                </p>
            </div>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewData["ErrorMessage"]
                </div>
            }
        </div>
    </div>
</div>